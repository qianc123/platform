<div class="modal-content">
    <div class="modal-header">
        <button type="button" ng-click="cancel()" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">{{title}}</h4>
    </div>
    <div class="modal-body">
        <div class="margin-10">
            <form role="form" name="formAdd" novalidate>
                <div ng-if="viewConfig.showQuestionType" class="form-title">
                    试题类型
                </div>
                <div ng-if="viewConfig.showQuestionType" class="form-group">
                    <div class="btn-group btn-group-justified">
                        <label class="btn btn-default" ng-model="question.questionType" btn-radio="'SingleSelection'" uncheckable>单选题</label>
                        <label class="btn btn-default" ng-model="question.questionType" btn-radio="'MultipleChoice'" uncheckable>多选题</label>
                        <label class="btn btn-default" ng-model="question.questionType" btn-radio="'Practical'" uncheckable>实操题</label>
                    </div>
                </div>
                <hr ng-if="viewConfig.showQuestionType" class="wide" />
                <div class="form-title">
                    题干
                </div>
                <div ng-if="viewConfig.showFromLibrary" class="form-group">
                    <span class="input-icon icon-right">
                        <input type="button" class="btn btn-default btn-block margin-top-10" ng-click="fromLibrary()" value="从题库中导入" />
                    </span>
                </div>
                @*<div class="row">
                        <div class="col-sm-6">

                        </div>
                        <div class="col-sm-6">
                            <div class="form-group" ng-class="{ 'has-error' : formAdd.subjectUnitDisplayName.$invalid && !formAdd.subjectUnitDisplayName.$pristine }">
                                <span class="input-icon icon-right">
                                    <input type="text" name="subjectUnitDisplayName" class="form-control" ng-model="question.subjectUnit.displayName" placeholder="科目" ng-click="selectSubjectUnit()" required>
                                    <i class="fa fa-angle-down"></i>
                                </span>
                            </div>
                        </div>
                    </div>*@
                <div class="form-group">
                    <div class="ueditor" ng-model="question.stem" config="ueditorConfig"></div>
                </div>
                <ng-include src="question.questionType"></ng-include>
                <div class="form-title">
                    其他
                </div>
                @*<div class="form-group">
                        <tags-input ng-model="tags" placeholder="添加知识点">
                        </tags-input>
                    </div>*@
                <div class="form-group">
                    <textarea rows="6" class="form-control" placeholder="试题分析" ng-model="question.analysis"></textarea>
                </div>
                <div class="form-title">
                    分数
                </div>
                <div class="form-group">
                    <span class="input-icon icon-right">
                        <input type="text" float-mask class="form-control" ng-model="question.score" placeholder="分数" required />
                    </span>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" ng-click="save()" ng-disabled="formAdd.$invalid" class="btn btn-default">提交</button>
        <button type="button" ng-click="cancel()" class="btn btn-default" data-dismiss="modal">取消</button>
    </div>
</div>

<script id="SingleSelection" type="text/ng-template">
    <div class="txt3">
        <div class="form-title">
            单选选项
        </div>
        <form action="">
            <div class="form-group" ng-repeat="option in question.options">
                <div class="row">
                    @*<div ng-show="false">{{$index + 1}}</div>*@
                    <div class="col-sm-11" ng-class="{ 'has-error' : formAdd.displayName.$invalid && !formAdd.displayName.$pristine }">
                        <input type="text" class="form-control st1 {{option.isRightKey}}" ng-model="option.content" placeholder="选项" required />
                    </div>
                    <div class="col-sm-1">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" class="colored-success" ng-true-value="true" ng-false-value="false" ng-model="option.isRightKey" ng-change="singleChanged(option)">
                                <span class="text"></span>
                            </label>
                        </div>
                    </div>

                    <div class="col-sm-12 weizhi">
                        <button class="btn btn-sm btn-default" ng-click="deleteOption(option)"><span class="glyphicon glyphicon-trash"></span>删除当前选项</button>
                    </div>
                </div>
            </div>
            <button class="btn btn-group-justified btn-default" ng-click="addOption()">添加选项</button>
        </form>
    </div>
</script>

<script id="MultipleChoice" type="text/ng-template">
    <div class="txt3">
        <div class="form-title">
            多选选项
        </div>
        <form action="">
            <div class="form-group" ng-repeat="option in question.options">
                <div class="row">
                    @*<div ng-show="false">{{$index + 1}}</div>*@
                    <div class="col-sm-11 ">
                        <input type="text" class="form-control st1 {{option.isRight}}" ng-model="option.content" placeholder="选项" required />
                    </div>
                    <div class="col-sm-1">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" class="colored-success" ng-true-value="true" ng-false-value="false" ng-model="option.isRight">
                                <span class="text"></span>
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-12 weizhi">
                        <button class="btn btn-sm btn-default" ng-click="deleteOption(option)"><span class="glyphicon glyphicon-trash"></span>删除当前选项</button>
                    </div>
                </div>
            </div>
            <button class="btn btn-group-justified btn-default" ng-click="addOption()">添加选项</button>
        </form>
    </div>


</script>

<script id="Practical" type="text/ng-template">
    <div class="form-title">
        评分标准
    </div>
    <form action="">
        <div class="form-group" ng-repeat="option in question.options">
            <div class="row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" ng-model="option.content" placeholder="评分项" required />
                </div>
                <div class="col-sm-2">
                    <input type="text" float-mask class="form-control" ng-model="option.score" placeholder="分数" required />
                </div>
                <div class="col-sm-12 margin-top-10">
                    <button class="btn btn-sm btn-default" ng-click="deleteOption(option)"><span class="glyphicon glyphicon-trash"></span>删除当前评分项</button>
                </div>
            </div>
        </div>
        <button class="btn btn-group-justified btn-default" ng-click="addOption()">添加评分项</button>
    </form>
</script>

