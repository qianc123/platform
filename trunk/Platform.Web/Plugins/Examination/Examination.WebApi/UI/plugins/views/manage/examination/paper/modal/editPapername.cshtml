<div class="row">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" ng-click="cancel()" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">{{title}}</h4>
        </div>
        <div class="modal-body">
            <div class="tab-pane active" id="info-tab">
                <form name="formAdd" role="form" novalidate class="row form-horizontal bv-form modal-body">
                    <div class="col-md-12">
                        <div class="form-group" ng-class="{ 'has-error' : formAdd.name.$invalid && !formAdd.name.$pristine }">
                            <label>试卷名称</label>
                            <input type="text" placeholder="" name="displayName" ng-model="paperin.name" class="form-control" required>


                            <label class="padding-top-5">科目</label>
                            @*<input type="text" placeholder="" name="displayName" ng-model="paperin.subjectUnit.displayName" class="form-control" required>*@
                            <input type="text" name="displayName" class="form-control" ng-model="paperin.subjectUnit.displayName" placeholder="科目" ng-click="selectSubjectUnit()" required />
                            <p ng-show="formAdd.displayName.$invalid && !formAdd.displayName.$pristine" class="help-block">请选择科目.</p>

                            <label class="padding-top-5">答题时间</label>
                            <input type="text" placeholder="" name="displayName" ng-model="paperin.answerTime" class="form-control" required>

                            <label class="padding-top-5">标签</label>
                            <input type="text" placeholder="" name="displayName" ng-model="paperin.points" class="form-control" required>

                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" ng-click="save()" ng-disabled="formAdd.$invalid" class="btn btn-default">提交</button>
            <button type="button" ng-click="cancel()" class="btn btn-default" data-dismiss="modal">取消</button>
        </div>
    </div>
</div>