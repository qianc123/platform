<div class="modal-content">
    <div class="modal-header">
        <button type="button" ng-click="cancel()" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">{{title}}</h4>
    </div>
    <div class="modal-body">
        <div class="tab-pane active" id="info-tab">
            <form name="formAdd" role="form" novalidate class="row form-horizontal bv-form modal-body">
                <div class="col-md-12">
                    <div class="form-group" ng-class="{ 'has-error' : formAdd.name.$invalid && !formAdd.name.$pristine }">
                        <label>试卷名称</label>
                        <input type="text" placeholder="试卷名称" name="name" ng-model="paper.name" class="form-control" required>
                        <p ng-show="formAdd.name.$invalid && !formAdd.name.$pristine" class="help-block">请填写试卷名称.</p>
                    </div>
                    <div class="form-group" ng-class="{ 'has-error' : formAdd.subjectUnitDisplayName.$invalid && !formAdd.subjectUnitDisplayName.$pristine }">
                        <label>科目</label>
                        <input type="text" name="subjectUnitDisplayName" class="form-control" ng-model="paper.subjectUnit.displayName" placeholder="科目" ng-click="selectSubjectUnit()" required />
                        <p ng-show="formAdd.subjectUnitDisplayName.$invalid && !formAdd.subjectUnitDisplayName.$pristine" class="help-block">请选择科目.</p>
                    </div>
                    <div class="form-group" ng-class="{ 'has-error' : formAdd.answerTime.$invalid && !formAdd.answerTime.$pristine }">
                        <label>答题时间</label>
                        <input type="text" number-mask name="answerTime" class="form-control" ng-model="paper.answerTime" placeholder="答题时间" />
                        <p ng-show="formAdd.answerTime.$invalid && !formAdd.answerTime.$pristine" class="help-block">请填写答题时间.</p>
                    </div>
                    <div class="form-group">
                        <label>标签</label>
                        <div>
                            <tags-input ng-model="tags" placeholder="添加标签">
                            </tags-input>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" ng-click="save()" ng-disabled="formAdd.$invalid" class="btn btn-default">提交</button>
        <button type="button" ng-click="cancel()" class="btn btn-default" data-dismiss="modal">取消</button>
    </div>
</div>