<div class="modal-content">
    <div class="modal-header">
        <button type="button" ng-click="cancel()" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">{{title}}</h4>
    </div>
    <div class="modal-body">
        <div class="tab-pane active" id="info-tab">
            <form name="formAdd" role="form" novalidate class="row form-horizontal bv-form modal-body">
                <div class="col-md-12">
                    <div class="form-group" ng-class="{ 'has-error' : formAdd.name.$invalid && !formAdd.name.$pristine }">
                        <label>题目名称</label>
                        <input type="text" placeholder="题目名称" name="name" ng-model="group.name" class="form-control" required>
                        <p ng-show="formAdd.name.$invalid && !formAdd.name.$pristine" class="help-block">请填写题目名称.</p>
                    </div>
                    <div class="form-group" ng-class="{ 'has-error' : formAdd.name.$invalid && !formAdd.name.$pristine }">
                        <label>题目名称</label>
                        <ui-select ng-model="group.questionType" theme="select2" style="width: 100%;" required>
                            <ui-select-match placeholder="试题类型">{{$select.selected.name}}</ui-select-match>
                            <ui-select-choices repeat="questionType.key as questionType in questionTypes| filter:$select.search">
                                <div ng-bind-html="questionType.name| highlight: $select.search"></div>
                            </ui-select-choices>
                        </ui-select>
                        <p ng-show="formAdd.name.$invalid && !formAdd.name.$pristine" class="help-block">请填写题目名称.</p>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" ng-click="save()" ng-disabled="formAdd.$invalid" class="btn btn-default">提交</button>
        <button type="button" ng-click="cancel()" class="btn btn-default" data-dismiss="modal">取消</button>
    </div>
</div>